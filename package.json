{
  "name": "playground-frontend",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8.9.0"
  },
  "sideEffects": [
    "*.css"
  ],
  "browserslist": [
    "> 0.5% in jp",
    "not ios < 10.3",
    "not android < 5",
    "not safari < 10.1",
    "not chrome 49",
    "not dead"
  ],
  "lint-staged": {
    "subTaskConcurrency": 1,
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ],
      "*.{css,scss}": [
        "prettier --write",
        "stylelint",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s typecheck safe-guard"
    }
  },
  "scripts": {
    "start": "run-p start:*",
    "start:gulp": "cross-env NODE_ENV=development gulp",
    "start:webpack": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --history-api-fallback --progress --color --config tools/webpack/development.js",
    "prebuild": "run-s clean:build",
    "build": "run-s build:gulp build:webpack",
    "build:gulp": "cross-env NODE_ENV=production gulp build",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --config tools/webpack/production.js",
    "build:check": "run-s build server",
    "build:diff": "node tools/getBuildDiff",
    "analyze": "cross-env NODE_ENV=production webpack --progress --config tools/webpack/analyze.js",
    "clean": "run-p clean:*",
    "clean:dev": "rimraf .tmp",
    "clean:build": "rimraf build",
    "server": "http-server ./build -p 23000 -o --cors",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "safe-guard": "lint-staged",
    "lint": "run-p lint:*",
    "lint:style": "stylelint 'src/**/*.scss'",
    "lint:script": "tslint -t stylish 'src/**/*.{ts,tsx}'",
    "fix": "run-p fix:*",
    "fix:style": "prettier --write 'src/**/*.scss'",
    "fix:script": "tslint -t stylish --fix 'src/**/*.{ts,tsx}'",
    "fix:json": "prettier --write 'src/**/*.json'",
    "typecheck": "tsc --noEmit -p tsconfig.production.json"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "lodash-es": "^4.17.11",
    "rxjs": "^6.3.2",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "cache-loader": "^1.2.5",
    "child_process": "^1.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "dotenv": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.15",
    "fs-extra": "^7.0.1",
    "globby": "^8.0.1",
    "gulp": "^3.9.1",
    "gulp-ejs": "^3.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "http-server": "^0.11.1",
    "husky": "^1.1.4",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^6.0.0",
    "jest": "^23.6.0",
    "license-info-webpack-plugin": "^1.1.0",
    "lint-staged": "^8.0.5",
    "node-sass": "^4.10.0",
    "node-sass-package-importer": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "postcss-color-hex-alpha": "^5.0.2",
    "postcss-custom-properties": "^8.0.9",
    "postcss-fixes": "^2.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.15.2",
    "raw-loader": "^0.5.1",
    "require-dir": "^1.0.0",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.1.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "stylelint": "^9.8.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.0",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
